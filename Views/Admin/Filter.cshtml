@using Project_Admin_Prac.Models;
@Model dynamic
@{
    ViewBag.Title = "Filter";
}

<h2>Service List</h2>

@using (Html.BeginForm())
{
    <text>Location</text>@Html.DropDownList("location", new SelectList(ViewBag.Locationservice))
    <input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            OrderId
        </th>
        <th>
            RoomCount
        </th>
        <th>
            Address
        </th>
        <th>
            Location
        </th>
        <th>
            TimeSlot
        </th>
        <th>
            ContactNumber
        </th>
        <th>
            Date
        </th>
        <th>
            Status_Admin
        </th>
        <th>
            Status_Cleaner
        </th>
        <th>
            Service_Status
        </th>
        <th>
            Cleaner_Id
        </th>
    </tr>

    @foreach (Service item in Model.Services)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.OrderId) </td>
            <td>@Html.DisplayFor(modelItem => item.RoomCount) </td>
            <td>@Html.DisplayFor(modelItem => item.Address) </td>
            <td>@Html.DisplayFor(modelItem => item.Location) </td>
            <td>@Html.DisplayFor(modelItem => item.TimeSlot) </td>
            <td>@Html.DisplayFor(modelItem => item.ContactNumber) </td>
            <td>@Html.DisplayFor(modelItem => item.Date) </td>
            <td>@Html.DisplayFor(modelItem => item.Status_Admin) </td>
            <td>@Html.DisplayFor(modelItem => item.Status_Cleaner) </td>
            <td>@Html.DisplayFor(modelItem => item.Service_Status) </td>
            <td>@Html.DisplayFor(modelItem => item.Cleaner_Id) </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { Orderid = item.OrderId }) |
                @Html.ActionLink("Details", "Details", new { Orderid = item.OrderId }) |
                @Html.ActionLink("Delete", "Delete", new { Orderid = item.OrderId })
            </td>
        </tr>
    }
</table>

